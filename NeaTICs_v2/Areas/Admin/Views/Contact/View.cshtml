@model NeaTICs_v2.Models.ContactMessage

@{
    ViewBag.Title = "Mensaje";
}

<h2 class="text-center">Mensaje de: @Html.DisplayTextFor(x => x.Name)</h2>
<div class="col-xs-8 col-md-offset-1">
    <dl class="dl-horizontal">
        <dt>
            Fecha de envío
        </dt>
        <dd>
            @Html.DisplayTextFor(x => x.Date)
        </dd>

        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayTextFor(x => x.Email)
        </dd>
        <dt>
            Asunto
        </dt>
        <dd>
            @Html.DisplayTextFor(x => x.Subject)
        </dd>
        <dt><br /></dt>
        <dt>
            Mensaje
        </dt>
        <dd><br /></dd>
        <dd>
            @Html.TextAreaFor(x => x.Message, new { @class = "form-control", rows = "7" })
        </dd>
        <dd><br /></dd>
        <dd><br /></dd>
        <dd>
            @Html.ActionLink("Volver", "Index")
        </dd>
    </dl>
</div>

